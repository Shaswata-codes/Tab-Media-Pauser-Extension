{
  "manifest_version": 3,
  "name": "Tab Media Pauser/Resumer",
  "version": "1.0",
  "description": "Pauses media when switching tabs and resumes it when returning.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Media Pauser"
  }
}
